<%= form_for message, remote: true do |f| %>
  <div class="input-group">
    <%= f.text_field :content, data: { textfield: "message" }, class: "form-control", autocomplete: :off %>
  </div>
  <%= f.submit :send, data: { send: "message" }, style: "display: none;" %>
  <%= f.hidden_field :room_id, value: room.id %>
<% end %>
