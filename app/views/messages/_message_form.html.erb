<%= form_for message, remote: true do |f| %>
  <div class="input-group">
    <%= f.text_field :content, data: { textfield: "message" }, class: "form-control" %>
    <%= f.submit :send, data: { send: "message" }, class: "input-group-addon" %>
  </div>
  <%= f.hidden_field :room_id, value: room.id %>
<% end %>
